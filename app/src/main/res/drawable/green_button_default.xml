<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="1dp" android:top="1dp">
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@color/greenDark" />
                    <padding android:bottom="1dp" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp">
                <shape>
                    <gradient android:angle="270" android:endColor="@color/colorPrimaryGreen" android:startColor="@color/colorPrimaryGreen" />
                    <stroke android:width="1dp" android:color="@color/greenDark" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>